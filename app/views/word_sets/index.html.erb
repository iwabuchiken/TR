<h1>Listing word_sets</h1>

<table>
  <tr>
    <th>Word a</th>
    <th>Word b</th>
    <th>Word c</th>
    <th>Lang</th>
    <th>Text</th>
    <th>Text ids</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @word_sets.each do |word_set| %>
  <tr>
    <td><%= word_set.word_a %></td>
    <td><%= word_set.word_b %></td>
    <td><%= word_set.word_c %></td>
    <td><%= word_set.lang_id %></td>
    <td><%= word_set.text_id %></td>
    <td><%= word_set.text_ids %></td>
    <td><%= link_to 'Show', word_set %></td>
    <td><%= link_to 'Edit', edit_word_set_path(word_set) %></td>
    <td><%= link_to 'Destroy', word_set, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

